{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "target": "ES6",
      "outDir": "public",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "lib": ["ES6", "dom", "esnext"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }